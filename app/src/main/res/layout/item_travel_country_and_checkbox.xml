<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:foreground="?selectableItemBackground"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:paddingHorizontal="@dimen/spacing_large">

	<View
		android:id="@+id/separator_top"
		android:layout_width="match_parent"
		android:layout_height="@dimen/separator_height"
		android:background="@color/grey_medium"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/travel_country_item_flag"
		android:layout_width="@dimen/icon_size"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		app:layout_constraintBottom_toBottomOf="@id/travel_country_item_name"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@id/travel_country_item_name" />

	<TextView
		android:id="@+id/travel_country_item_name"
		style="@style/NextStep.Text.Title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/spacing_medium_large"
		android:layout_marginTop="@dimen/spacing_medium_large"
		android:layout_marginEnd="@dimen/spacing_medium_large"
		android:text="Deutschland"
		app:layout_constraintEnd_toStartOf="@id/travel_country_item_checkbox"
		app:layout_constraintStart_toEndOf="@id/travel_country_item_flag"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/travel_country_item_checkbox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_check_unchecked"
		app:layout_constraintBottom_toBottomOf="@id/travel_country_item_name"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/travel_country_item_name" />

	<View
		android:id="@+id/separator_bottom"
		android:layout_width="match_parent"
		android:layout_height="@dimen/separator_height"
		android:layout_marginTop="@dimen/spacing_medium_large"
		android:background="@color/grey_medium"
		app:layout_constraintTop_toBottomOf="@id/travel_country_item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>