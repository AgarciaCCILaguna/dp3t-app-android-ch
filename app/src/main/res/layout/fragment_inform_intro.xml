<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/inform_travel_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:navigationContentDescription="@string/android_accessibility_back_button">

		<Button
			android:id="@+id/inform_intro_cancel_button"
			style="@style/NextStep.Button.Transparent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|end"
			android:layout_marginEnd="@dimen/spacing_medium_large"
			android:text="@string/cancel" />

	</androidx.appcompat.widget.Toolbar>

	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@color/white">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginHorizontal="@dimen/spacing_medium_large"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:paddingVertical="@dimen/spacing_huge">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ill_wichtiger_hinweis" />

			<TextView
				style="@style/NextStep.Text.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/spacing_large"
				android:gravity="center_horizontal"
				android:text="@string/inform_code_intro_title" />

			<TextView
				style="@style/NextStep.Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/spacing_larger"
				android:gravity="center_horizontal"
				android:text="@string/inform_code_intro_text" />

		</LinearLayout>

	</ScrollView>

	<LinearLayout
		android:id="@+id/inform_intro_button_continue_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:elevation="@dimen/onboarding_button_container_elevation"
		android:gravity="center"
		android:outlineProvider="bounds"
		android:padding="@dimen/spacing_medium_large"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<Button
			android:id="@+id/inform_intro_button_continue"
			style="@style/NextStep.Button.Purple"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/inform_continue_button" />

	</LinearLayout>

</LinearLayout>

