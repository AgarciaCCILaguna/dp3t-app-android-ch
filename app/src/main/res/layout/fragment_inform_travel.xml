<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/inform_travel_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:navigationContentDescription="@string/android_accessibility_back_button"
		app:navigationIcon="@drawable/ic_arrow_back"
		app:title="@string/travel_title" >

		<Button
			android:id="@+id/inform_travel_cancel_button"
			style="@style/NextStep.Button.Transparent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/spacing_medium_large"
			android:layout_gravity="center_vertical|end"
			android:text="@string/cancel" />

	</androidx.appcompat.widget.Toolbar>


	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/inform_travel_recyclerview"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:paddingTop="@dimen/spacing_medium_large"
		android:clipToPadding="false"
		android:layout_weight="1"/>

	<LinearLayout
		android:id="@+id/inform_travel_button_continue_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:elevation="@dimen/onboarding_button_container_elevation"
		android:gravity="center"
		android:outlineProvider="bounds"
		android:padding="@dimen/spacing_medium_large"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<Button
			android:id="@+id/inform_travel_button_continue"
			style="@style/NextStep.Button.Purple"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/inform_continue_button" />

	</LinearLayout>

</LinearLayout>
